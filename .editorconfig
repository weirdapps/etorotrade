# EditorConfig helps maintain consistent coding styles across various editors and IDEs
# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
