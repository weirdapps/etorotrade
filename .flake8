[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,venv,myenv
ignore = E203,W503,E231,E501
per-file-ignores =
    __init__.py:F401,F403
    # Allow the tests to use assertions
    tests/*:S101
select = C,E,F,W,B,B950,S
extend-ignore =
    # Ignore line too long
    E501,
    # Whitespace before ':'
    E203